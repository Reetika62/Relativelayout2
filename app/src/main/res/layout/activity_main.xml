<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:scontext=".MainActivity"
    android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="99dp"
        android:layout_height="101dp"
        android:src="@drawable/img" />

    <EditText
            android:id="@+id/space_station"
            android:layout_width="95dp"
            android:layout_height="79dp"
            android:layout_below="@+id/img2"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="16dp"
            android:hint="space station"
            android:textStyle="bold" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/img2"
        android:src="@drawable/img_1" />

    <EditText
        android:id="@+id/Flights"
        android:layout_width="131dp"
        android:layout_height="74dp"
        android:layout_below="@+id/img3"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/space_station"
        android:hint="Flights"
        android:textStyle="bold" />

    <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="66dp"
            android:layout_toRightOf="@+id/img3"
            android:src="@drawable/img_3" />

        <EditText
            android:id="@+id/Rovers"
            android:layout_width="95dp"
            android:layout_height="79dp"
            android:layout_below="@+id/img3"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/Flights"
            android:hint="Rovers"
            android:textStyle="bold" />


    <TextView
        android:layout_width="123dp"
        android:layout_height="126dp"
        android:layout_below="@+id/space_station"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:hint="DCA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="110dp"
        android:layout_below="@+id/Rovers"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:hint="MARS"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="270dp"

        android:layoutbelow="@+id/et_Flights"
        android:text="way" />

    <Button
        android:id="@+id/one_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="250dp"
        android:text="one way" />


</RelativeLayout>
